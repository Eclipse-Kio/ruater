<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".a.MainActivity">

    <Button
        android:id="@+id/to_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to_list"
        app:layout_constraintBottom_toTopOf="@id/to_demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/to_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to_demo"
        app:layout_constraintBottom_toTopOf="@id/to_this"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_list" />

    <Button
        android:id="@+id/to_this"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to_demo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_demo" />

</androidx.constraintlayout.widget.ConstraintLayout>